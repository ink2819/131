<form action="/genres/upsert" role="form" method="post">
  <h1>New Genre</h1>
  {{#if genre}}
  <div>
    <h2>Editing: {{genre.name}}</h2>
    <input type="hidden" name="id" value="{{genreIndex}}">
  </div>
  {{/if}}
  <div>
    <label>Genre Name</label>
    <input type="text" id="name" name="name" {{#if genre}}value="{{genre.name}}"{{/if}}>
  </div>
